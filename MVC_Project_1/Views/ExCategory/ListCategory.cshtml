@model List<MVC_Project_1.Models.ExCategory>
@{
    ViewBag.Title = "ListCategory";
}

<h2>ALL-Category</h2>

@if (TempData["AlertMsg"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong>@TempData["AlertMsg"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<p>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href=" @Url.Action("Create","ExCategory")">
                <input type="button" class="btn-info btn" value="Create Category" />
            </a>

        </div>
    </div>
</p>


<table class="table table-bordered">
    <tr>
        <th>Category Name</th>
        <th>Expanse Limit</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink(item.Name, "CatNameSearch", "ExCategory", new { Id = item.Id }, null)</td>
            <td>@item.Ex_Limit</td>
            <td>
                <a href="@Url.Action("EditCategory",new { item.Id,item.Name,item.Ex_Limit })" class="btn btn-success">Edit</a>
                <a href="@Url.Action("Delete",new { item.Id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>

@if (TempData["Remain"] != null)
{
    <div class="card text-center">
        <strong>Remain Amount Is :</strong>@TempData["Remain"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}


